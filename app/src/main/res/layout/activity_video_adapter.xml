<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:background="#f2f4f5"
    android:paddingBottom="4dp"
    android:orientation="vertical">

    <TextView
                                android:fontFamily="@font/intel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="left|center"
        android:paddingLeft="15dp"
        android:textColor="@color/c1"
        android:textSize="15dp"
        android:text="Title or Video name"
        android:background="@color/c2"
        android:layout_marginBottom="0.5dp"/>

    <androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:foregroundGravity="center"
    card_view:cardBackgroundColor="@color/c2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <com.allattentionhere.autoplayvideos.AAH_VideoImage
                android:id="@+id/vi"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/img_playback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_margin="8dp"
                android:src="@drawable/ic_sync_black_24dp"
                android:tint="@color/c1"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/pb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_vol"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right|bottom"
                android:layout_margin="8dp"
                android:src="@drawable/video"/>
        </FrameLayout>

        <TextView
                                android:fontFamily="@font/intel"
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="@color/c1"
            android:textSize="15dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>
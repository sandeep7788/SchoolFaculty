<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#f2f4f5">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="9dp"
        card_view:cardCornerRadius="9dp"
        card_view:cardBackgroundColor="@android:color/white"
        android:layout_marginBottom="9dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/school"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/thumbnail"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:text="title"
                android:textColor="@android:color/white"
                />
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_below="@+id/thumbnail"
                android:layout_alignParentStart="true"
                android:text="classe:- 1"
                android:layout_alignParentLeft="true"
                android:textColor="@color/c1"
                android:layout_marginBottom="4dp"
                android:background="@color/app"
                android:layout_marginTop="0.5dp"/>

            <TextView
                android:id="@+id/classe"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp"
                android:text="classe:- 1"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:textColor="@color/c1"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/date"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/classe"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp"
                android:text="date:- 00:00:00"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:textColor="@color/c1"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/section"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:text="section:-00:00:00"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:textColor="@color/c1"/>

            <TextView
                android:id="@+id/description"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/section"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:padding="4dp"
                android:layout_marginTop="4dp"
                android:text="description :-"
                android:textStyle="bold"
                android:textColor="@color/c1"
                />

            <TextView
                android:id="@+id/description1"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:padding="4dp"
                android:text="description descriptiondescription"
                android:textColor="@color/c1"
                android:paddingBottom="15dp"
                android:minHeight="100dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>